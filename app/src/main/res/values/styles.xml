<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="navigationFragmentContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:name">androidx.navigation.fragment.NavHostFragment</item>
    </style>

    <style name="LabelSplashTitle">
        <item name="android:text">@string/splash_title</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/sp46</item>
        <item name="android:textColor">@color/cardview_dark_background</item>
    </style>

    <style name="SplashLogo">
        <item name="android:layout_width">@dimen/dp48</item>
        <item name="android:layout_height">@dimen/dp48</item>
    </style>

    <style name="gamesFragmentAppBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="gamesFragmentList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp0</item>
    </style>

    <style name="gamesFragmentListLabelTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/gamesToolbarListTitle</item>
        <item name="android:textSize">@dimen/sp42</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="gamesFragmentImgBtnToolbar">
        <item name="android:layout_width">@dimen/dp36</item>
        <item name="android:layout_height">@dimen/dp36</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginEnd">@dimen/dp6</item>
    </style>

    <style name="gamesFragmentImgBtnToolbarPlatform">
        <item name="android:layout_width">@dimen/dp36</item>
        <item name="android:layout_height">@dimen/dp36</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginEnd">@dimen/dp16</item>
    </style>

    <style name="emptySpace">
        <item name="android:layout_width">@dimen/dp0</item>
        <item name="android:layout_height">@dimen/dp0</item>
        <item name="android:layout_weight">@integer/int1</item>
    </style>

    <style name="gamesFragmentBottomNavigation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="gamesFragmentBtnAdd">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/dp16</item>
        <item name="android:layout_marginBottom">@dimen/dp26</item>
        <item name="android:backgroundTint">@color/md_theme_dark_inverseOnSurface</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="gamesFragmentImgBtnBottomNavigation">
        <item name="android:layout_width">@dimen/dp0</item>
        <item name="android:layout_height">@dimen/dp36</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_marginEnd">@dimen/dp6</item>
        <item name="android:layout_weight">@integer/int1</item>
    </style>

</resources>