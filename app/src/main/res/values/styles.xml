<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="navigationFragmentContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:name">androidx.navigation.fragment.NavHostFragment</item>
    </style>

    <style name="LabelSplashTitle">
        <item name="android:text">@string/splash_title</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/sp46</item>
        <item name="android:textColor">@color/cardview_dark_background</item>
    </style>

    <style name="SplashLogo">
        <item name="android:layout_width">@dimen/dp48</item>
        <item name="android:layout_height">@dimen/dp48</item>
    </style>

    <style name="gamesFragmentAppBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="gamesFragmentList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp0</item>
    </style>

    <style name="gamesFragmentListLabelTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/gamesToolbarListTitle</item>
        <item name="android:textSize">@dimen/sp42</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="gamesFragmentImgBtnToolbar">
        <item name="android:layout_width">@dimen/dp36</item>
        <item name="android:layout_height">@dimen/dp36</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginEnd">@dimen/dp6</item>
    </style>

    <style name="gamesFragmentImgBtnToolbarPlatform">
        <item name="android:layout_width">@dimen/dp36</item>
        <item name="android:layout_height">@dimen/dp36</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginEnd">@dimen/dp16</item>
    </style>

    <style name="emptySpace">
        <item name="android:layout_width">@dimen/dp0</item>
        <item name="android:layout_height">@dimen/dp0</item>
        <item name="android:layout_weight">@integer/int1</item>
    </style>

    <style name="gamesFragmentBottomNavigation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="gamesFragmentBtnAdd">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/dp16</item>
        <item name="android:layout_marginBottom">@dimen/dp26</item>
        <item name="android:backgroundTint">@color/md_theme_dark_inverseOnSurface</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="gamesFragmentImgBtnBottomNavigation">
        <item name="android:layout_width">@dimen/dp0</item>
        <item name="android:layout_height">@dimen/dp36</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_marginEnd">@dimen/dp6</item>
        <item name="android:layout_weight">@integer/int1</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="orderDialogCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp0</item>
    </style>

    <style name="orderDialogLabelTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/order_dialog_filter_title</item>
        <item name="android:textSize">@dimen/sp28</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="orderDialogBtnClose">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
    </style>

    <style name="orderDialogDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp1</item>
        <item name="android:layout_marginStart">@dimen/dp16</item>
    </style>

    <style name="orderDialogBtnPlayStation">
        <item name="android:layout_width">@dimen/dp0</item>
        <item name="android:layout_height">@dimen/dp82</item>
        <item name="android:layout_marginTop">@dimen/dp42</item>
        <item name="android:contentDescription">@string/test_text</item>
        <item name="android:drawableLeft">@drawable/playstation_logo</item>
        <item name="android:text">@string/order_dialog_label_button_playstation</item>
        <item name="android:textColor">@color/md_theme_dark_surfaceVariant</item>
        <item name="android:textSize">@dimen/sp28</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="orderDialogBtnNintendo">
        <item name="android:layout_width">@dimen/dp0</item>
        <item name="android:layout_height">@dimen/dp82</item>
        <item name="android:layout_marginTop">@dimen/dp42</item>
        <item name="android:contentDescription">@string/test_text</item>
        <item name="android:drawableLeft">@drawable/nintendo_logo</item>
        <item name="android:text">@string/order_dialog_label_button_nintendo</item>
        <item name="android:textColor">@color/md_theme_dark_surfaceVariant</item>
        <item name="android:textSize">@dimen/sp28</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="orderDialogBtnXbox">
        <item name="android:layout_width">@dimen/dp0</item>
        <item name="android:layout_height">@dimen/dp82</item>
        <item name="android:layout_marginTop">@dimen/dp42</item>
        <item name="android:contentDescription">@string/test_text</item>
        <item name="android:drawableLeft">@drawable/xbox_logo</item>
        <item name="android:text">@string/order_dialog_label_button_xbox</item>
        <item name="android:textColor">@color/md_theme_dark_surfaceVariant</item>
        <item name="android:textSize">@dimen/sp28</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="orderDialogBtnAllPlatform">
        <item name="android:layout_width">@dimen/dp0</item>
        <item name="android:layout_height">@dimen/dp82</item>
        <item name="android:layout_marginTop">@dimen/dp42</item>
        <item name="android:contentDescription">@string/test_text</item>
        <item name="android:drawableLeft">@drawable/all_platform_icon</item>
        <item name="android:text">@string/order_dialog_label_button_all_platform</item>
        <item name="android:textColor">@color/md_theme_dark_surfaceVariant</item>
        <item name="android:textSize">@dimen/sp28</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GuideLineVertical">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="GuideLineHorizontal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="orderDialogBtnAccept">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dp16</item>
        <item name="android:text">@string/order_dialog_button_accept</item>
        <item name="android:textSize">@dimen/sp24</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="gameListItemImg">
        <item name="android:layout_width">@dimen/dp42</item>
        <item name="android:layout_height">@dimen/dp42</item>
        <item name="android:layout_margin">@dimen/dp6</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="gameListItemLabels">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="gameListItemImgCover">
        <item name="android:layout_width">@dimen/dp122</item>
        <item name="android:layout_height">@dimen/dp122</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="deleteDialogLabelConfirmation">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp42</item>
        <item name="android:layout_marginBottom">@dimen/dp42</item>
        <item name="android:textSize">@dimen/sp28</item>
    </style>

</resources>